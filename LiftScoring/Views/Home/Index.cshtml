        <h1>Lift Scoring</h1>
        <p>Compete with yourself, friends, or colleagues.</p>
      </div>
    </div>
  </div>

  <!-- Row 2 -->
  <div class="container my-5 text-center">
    <div class="row">
      <div class="col-md-4 mb-3">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Deadlift</h5>
            <p class="card-text">@Model.DeadLift</p>
          </div>
        </div>
      </div>
      <div class="col-md-4 mb-3">
        <div class="card">
          <div class="card-body">
